{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/assets/*": ["src/assets/*"],
      "@/api/*": ["src/api/*"],
      "@/components/*": ["src/components/*"],
      "@/interfaces/*": ["src/interfaces/*"],
      "@/pages/*": ["src/pages/*"],
      "@/router/*": ["src/router/*"],
      "@/services/*": ["src/services/*"],
      "@/store/*": ["src/store/*"],
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
